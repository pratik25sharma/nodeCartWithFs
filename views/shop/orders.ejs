<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if(orders.length >= 1) {%>
            <ul>
                <% orders.forEach(order => { %>
                    <li>
                        <h1># <%= order._id %></h1>
                        <ul>
                            <% order.items.forEach( item => { %>
                                <li><%= item.title %> (<%= item.quantity %> )</li>
                            <% }); %>
                        </ul>
                    </li>
                <% }) %>
            </ul>
        <% }else { %>
            <h1>Nothing Here</h1>
        <% }%>
    </main>

<%- include('../includes/end.ejs') %>