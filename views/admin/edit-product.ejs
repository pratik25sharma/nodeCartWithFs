<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<%= (!edit) ? 'add-product' : 'edit-product' %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= (edit) ? product.title : '' %>" >
            </div>
            <div class="form-control">
                <label for="imageUrl">Image Url</label>
                <input type="text" name="imageUrl" id="imageUrl"  value="<%= (edit) ? product.imageUrl : '' %>" >
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="text" name="price" id="price"  value="<%= (edit) ? product.price : '' %>" >
            </div>
            <div class="form-control">
                <label for="desc">Description</label>
                <textarea name="desc" id="desc" rows="5"><%= (edit) ? product.description : '' %></textarea>
            </div>
            <% if(edit) {%>
                <input type="hidden" value="<%= product.id %>" name="prodId" >
            <% } %>
            <button class="btn" type="submit"><%= (edit) ? 'Edit' : 'Add' %> Product</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>